
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>

<BorderPane xmlns:fx="javafx.com/fxml" fx:controller="sample.Controller" >
    <top>
    <Label fx:id="overLabel" alignment="CENTER" />
    </top>
    <center>
        <GridPane fx:id="playWindow" vgap="5" hgap="5" alignment="center" >

            <Button fx:id="btn1"  onAction="#playControl" prefWidth="90" prefHeight="90" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
            <Button fx:id="btn2" onAction="#playControl"   prefWidth="90" prefHeight="90" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
            <Button fx:id="btn3" onAction="#playControl"  prefWidth="90" prefHeight="90" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
            <Button fx:id="btn4" onAction="#playControl"  prefWidth="90" prefHeight="90" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
            <Button fx:id="btn5"  onAction="#playControl" prefWidth="90" prefHeight="90" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Button fx:id="btn6"  onAction="#playControl"  prefWidth="90" prefHeight="90" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button fx:id="btn7"  onAction="#playControl"  prefWidth="90" prefHeight="90" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
            <Button fx:id="btn8"  onAction="#playControl"  prefWidth="90" prefHeight="90" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <Button fx:id="btn9" onAction="#playControl"  prefWidth="90" prefHeight="90" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

        </GridPane>

    </center>
    <left>
        <VBox spacing="10">
            <padding>
                <Insets left="10" bottom="10" top="20" right="10"></Insets>
            </padding>
            <Label text="Player X" />
            <Button fx:id="playerX" text="0" prefHeight="20" prefWidth="90"/>
        </VBox>
    </left>
    <right>
        <VBox spacing="10">
            <padding>
                <Insets left="10" bottom="10" top="20" right="10"></Insets>
            </padding>
            <Label text="Player O" />
            <Button fx:id="playerO" text="0" prefHeight="20" prefWidth="90"/>
        </VBox>
    </right>
    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <padding>
                <Insets bottom="10" right="10" top="10" left="10" />
            </padding>
            <Label text="Turn" prefWidth="90" prefHeight="20" />
            <Label fx:id="turnLabel" prefWidth="90" prefHeight="20"/>
            <Button fx:id="btnPlay" onAction="#playorReset" text="Play" prefHeight="20" prefWidth="90" />
            <Button fx:id="btnReset" onAction="#playorReset" text="Reset"  prefHeight="20" prefWidth="90"/>

        </HBox>
    </bottom>
</BorderPane>